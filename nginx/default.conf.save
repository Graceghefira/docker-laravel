server {
    listen 80;
    server_name 103.196.153.144; 

    # Redirect semua HTTP ke HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name 103.196.153.144;
    root /usr/share/nginx/html/frontend-netpro/dist/netpro/browser;
    ssl_certificate /etc/letsencrypt/live/sysnet.awh.co.id/fullchain.pem; 
    ssl_certificate_key /etc/letsencrypt/live/sysnet.awh.co.id/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

   # Root ke aplikasi Laravel
    location / {
        proxy_pass http://localhost:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Konfigurasi untuk WebSocket
    location /app/ {
        proxy_pass http://localhost:6001;  
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;  
        proxy_set_header Connection "Upgrade";   
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Konfigurasi untuk file PHP, jika ada
    location ~ \.php$ {
    try_files $uri =404; 
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_pass app:9000;  # Mengarahkan ke service PHP dalam Docker
    fastcgi_index index.php;
    include fastcgi_params;  # Pastikan ini sudah benar
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_param PATH_INFO $fastcgi_path_info;
    }
}
